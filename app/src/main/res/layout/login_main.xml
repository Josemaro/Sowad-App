<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#6CDD4D"
    android:orientation="vertical"
    android:padding="120dp"
    tools:context="com.example.retretrofitjava.controllers.LoginActivity"
    app:layout_behavior="com.google.android.material.appbar.AppBarLayout">

    <TextView
        android:id="@+id/loginView"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:freezesText="false"
        android:text="LOGIN"
        android:textColor="#1636D8"
        android:textSize="56dp" />

    <ImageView
        android:layout_width="135dp"
        android:layout_height="122dp"
        android:src="@mipmap/ic_venta" />

    <TextView
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/wendy_one"
        android:text="Usuario"
        android:textColor="#204BCA"
        android:textSize="20sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:textSize="16sp" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/wendy_one"
        android:text="Contraseña"
        android:textColor="#204BCA"
        android:textSize="20sp"
        android:textStyle="italic"
        />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="16sp"
        android:inputType="textPassword"/>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#1636D8"
        android:fontFamily="@font/bangers"
        android:text="Iniciar Sesión"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />


</LinearLayout>